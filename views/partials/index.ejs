<!-- header-partials -->


<section class="section my-4">
 <div class="container text-center">
     <div class="title py-5">
         <h1>Node File Uploader</h1>
         <p class="subtitle">Upload Images to the <strong>Server</strong></p>
     </div>
     <div class="row justify-content-center">
         <div class="col-4">
            <form action="/uploadmultiple" enctype="multipart/form-data" method="post">
                <div class="row">
                    <div class="col-8">
                        <input type="file" class="form-control" name="images" id="formFile" multiple>
                    </div>
                    <div class="col-2">
                        <input type="submit" value="Upload images" class="btn btn-warning">
                    </div>
                </div>

            </form>
         </div>
     </div>
     <!-- display images -->
     <section class="mt-5">
         <div class="row">
          
                 <% for(let img of images){%>
                    <%if(img.imageBase64){%>
                  
                        <!-- bootstrap card -->
                          <div class="col-3">
                            <div class="card shadow" style="width: 18rem;" class="img-fluid">
                                <img src='data:<%=img.contentType%>;base64,<%=img.imageBase64%>' class="card-img-top" alt="...">
                                <div class="card-body">
                                  <h5 class="card-title font-poppins">Ui/UX Design</h5>
                                  <p class="card-text font-size-09">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                  <a href="#" class="btn btn-info font-size-09 text-light">Read More</a>
                                </div>
                              </div>
                          </div>
                        <!-- /bootstrap card -->            
                   <%}%>
                 <%}%>
         </div>
     </section>
     <!-- /display images -->

 </div>
</section>